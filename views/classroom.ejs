<!--embedded javascript file for classroom-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <title>Classroom</title>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
        const ROOM_ID = `<%= roomId %>`;
    </script>
</head>
<body>
    <div class="main-container">
        <div class="left-container">
            <div id="video-grid">
            </div>
            <div class="bottom-buttons">
                <div class="left-buttons">
                    <Button class="icon-wrapper" onclick="toggleMicrophoneOnOff(event)">
                        <i class="fas fa-microphone"></i>
                        <p>Mute</p>
                    </Button>
                    <Button class="icon-wrapper" onclick="toggleVideoOnOff(event)">
                        <i class="fas fa-video"></i>
                        <p>Stop Video</p>
                    </Button>
                </div>
                <div class="center-buttons">
                    <Button class="icon-wrapper">
                        <i class="fas fa-shield-alt"></i>
                        <p>Security</p>
                    </Button>
                    <Button class="icon-wrapper">
                        <i class="fas fa-user-friends"></i>
                        <p>Participants</p>
                    </Button>
                    <Button class="icon-wrapper" onclick="toggleMessageWindow(event)">
                        <i class="fas fa-comment-alt"></i>
                        <p>Chat</p>
                    </Button>
                </div>
                <div class="right-buttons">
                    <button class="leave-meeting-btn" onclick="leaveMeeting(event)">Leave Meeting</button>
                </div>
            </div>
        </div>
        <div class="right-container">
            <div class="right-header">
                <h2>Chat</h2>
            </div>
            <div class="chat-container">
                <ul id="messages"></ul>
            </div>
            <div class="chat-input-wrapper">
                <input name="chat-input" id="chat-input" placeholder="Type message here..."></input>
            </div>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</html>